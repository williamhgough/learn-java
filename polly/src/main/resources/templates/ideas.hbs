{{#partial "content" }}

    <h1>Current Ideas</h1>

    <ul>
        {{#each ideas}}

            <li>
                <form action="/ideas/{{ slug }}/vote" method="post">
                    <a href="/ideas/{{ slug }}">
                        {{ title }} ({{ voteCount}})
                    </a>
                    <button>Vote</button>
                </form>
            </li>
        {{/each}}
    </ul>

    <form action="/ideas" method="post">
        <div>
            <input name="title" placeholder="Whats your idea?">
        </div>
        <div>
            <textarea name="description" id="" cols="30" rows="10"></textarea>
        </div>
        <div>
            <button>Suggest!</button>
        </div>
    </form>
{{/partial}}

{{> base.hbs }}